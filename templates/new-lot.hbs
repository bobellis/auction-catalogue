<h1>New Lot</h1>

<form>
  <div class="form-group">
    <label for="description">Lot Description</label>
    {{input value=description id="description" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="starting-bid">Starting Bid</label>
    {{input value=startingBid id="starting-bid" class="form-control"}}
  </div>
  <button class="btn btn-success" {{action 'save'}}>Save</button>
</form>
